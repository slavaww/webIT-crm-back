{% extends 'base.html.twig' %}

{% block title %}Редактирование пользователя{% endblock %}

{% block body %}
    <h1>Редактирование пользователя {{ user.email }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        {{ form_row(form.roles) }}
        
        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a href="{{ path('app_settings') }}" class="btn btn-secondary">Отмена</a>
    {{ form_end(form) }}
{% endblock %}